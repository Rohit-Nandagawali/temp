<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"

            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="0dp"
            android:layout_height="22dp"
            android:layout_margin="10dp"
            android:background="@drawable/rect_bg"

            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Sports"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card"
        android:layout_alignBottom="@+id/card"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/card"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Published by "

                android:textColor="@color/grey80"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/poppins_medium"
                android:text="USER NAME"

                android:maxEms="10"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/grey100"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false"
            android:fontFamily="@font/poppins_semibold"
            android:text="Master Your Skill With Fun And Learn Very Fundamentals..."
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"

            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam"
            android:textColor="@color/grey100"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/t_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/poppins_medium"
            android:text="12 Oct 2024"
            android:textColor="#5C5C5C"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>